{
    "name": "conductor",
    "version": "1.0.0",
    "description": "Websocket service that manages tcp connections using redis and incoming notifications via rabbitmq",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && npm run watch",
        "start:prod": "npm run build && node --harmony --use-strict dist/server.js",
        "build": "npm run build-ts && npm run tslint",
        "clean": "rm -rf dist && rm -rf node_modules",
        "serve": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold, green.bold\" \"npm run watch-ts\" \"npm run serve\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "test": "jest --forceExit"
    },
    "keywords": [
        "websocket",
        "realtime",
        "http",
        "express",
        "node"
    ],
    "author": "Sri Majji",
    "license": "ISC",
    "dependencies": {
        "amqp": "^0.2.6",
        "body-parser": "^1.18.2",
        "compression": "^1.7.1",
        "connect-redis": "^3.3.2",
        "debug": "^3.1.0",
        "dotenv": "^4.0.0",
        "dotenv-expand": "^4.0.1",
        "express": "^4.16.2",
        "jsonwebtoken": "^8.1.0",
        "morgan": "^1.9.0",
        "typescript": "^2.6.2",
        "winston": "^2.4.0",
        "ws": "^3.3.3"
    },
    "devDependencies": {
        "@types/amqp": "^0.2.3",
        "@types/body-parser": "^1.16.8",
        "@types/compression": "0.0.35",
        "@types/debug": "0.0.30",
        "@types/dotenv": "^4.0.2",
        "@types/express": "^4.11.0",
        "@types/flat": "0.0.28",
        "@types/jsonwebtoken": "^7.2.5",
        "@types/morgan": "^1.7.35",
        "@types/node": "^8.5.2",
        "@types/winston": "^2.3.7",
        "@types/ws": "^3.2.1",
        "concurrently": "^3.5.1",
        "nodemon": "^1.14.3",
        "tslint": "^5.8.0"
    }
}
