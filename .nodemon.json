{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules", "dist/"],
    "verbose": true,
    "execMap": {
        "js": "node --harmony --use_strict ./dist/app.js"
    },
    "events": {},
    "watch": ["src/", "config/", "views/", ".nodemon.json"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json scss hbs jsx css"
}
